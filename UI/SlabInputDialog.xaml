<Window x:Class="RebarAutomation.UI.SlabInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Slab Rebar Design Input" Height="650" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Slab Rebar Design Parameters" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Input Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Dimensions -->
                <GroupBox Header="Slab Dimensions" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Length:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtLength" Margin="5,2"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="mm" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Width:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtWidth" Margin="5,2"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="mm" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Thickness:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtThickness" Margin="5,2"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="mm" VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>

                <!-- Loads -->
                <GroupBox Header="Loads" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Dead Load:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtDeadLoad" Text="1.0" Margin="5,2"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="kN/m²" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Live Load:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtLiveLoad" Text="3.0" Margin="5,2"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="kN/m²" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Floor Finish:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtFloorFinish" Text="1.0" Margin="5,2"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="kN/m²" VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>

                <!-- Materials -->
                <GroupBox Header="Material Properties" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Concrete Grade:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbConcreteGrade" Margin="5,2" SelectedIndex="1">
                            <ComboBoxItem Content="M20"/>
                            <ComboBoxItem Content="M25"/>
                            <ComboBoxItem Content="M30"/>
                            <ComboBoxItem Content="M35"/>
                            <ComboBoxItem Content="M40"/>
                        </ComboBox>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Steel Grade:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbSteelGrade" Margin="5,2" SelectedIndex="0">
                            <ComboBoxItem Content="Fe415"/>
                            <ComboBoxItem Content="Fe500"/>
                            <ComboBoxItem Content="Fe550"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>

                <!-- Cover -->
                <GroupBox Header="Cover Requirements" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Top Cover:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtTopCover" Text="25" Margin="5,2"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="mm" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Bottom Cover:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtBottomCover" Text="25" Margin="5,2"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="mm" VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>

                <!-- Support Conditions -->
                <GroupBox Header="Support Conditions" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <RadioButton x:Name="rbSimple" Content="Simply Supported" IsChecked="True" Margin="0,5"/>
                        <RadioButton x:Name="rbFixed" Content="Fixed Support" Margin="0,5"/>
                        <RadioButton x:Name="rbContinuous" Content="Continuous Support" Margin="0,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnOK" Content="Generate Rebar" Width="120" Height="30" 
                    Click="btnOK_Click" IsDefault="True" Margin="0,0,10,0"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="30" 
                    Click="btnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
